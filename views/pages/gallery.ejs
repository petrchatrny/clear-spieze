<!DOCTYPE html>
<html lang="cs">

  <head>
    <%- include ("../partials/head"); %>
  </head>

  <body class="container">
  
    <header>
      <%- include ("../partials/header"); %>
    </header>
    
    <!--CONTENT-->
    
    <!-- otevirani lightboxu -->
    <div id=nahledy>
      <center>
        <div id="odstavec">
          <img src="../static/img/img1.jpg" onclick="openModal();currentSlide(1)" class="hover-shadow">
          <img src="../static/img/img2.jpg" onclick="openModal();currentSlide(2)" class="hover-shadow">
          <img src="../static/img/img3.jpg" onclick="openModal();currentSlide(3)" class="hover-shadow">
          <img src="../static/img/img4.jpg" onclick="openModal();currentSlide(4)" class="hover-shadow">
          <img src="../static/img/img5.jpg" onclick="openModal();currentSlide(5)" class="hover-shadow">
          <img src="../static/img/img6.jpg" onclick="openModal();currentSlide(6)" class="hover-shadow">
          <img src="../static/img/img7.jpg" onclick="openModal();currentSlide(7)" class="hover-shadow">
        </div>
      </center>
    </div>

    <!-- The Modal/Lightbox -->
    <div id="myModal">
      <span class="close" onclick="closeModal()">&times;</span>

      <!--thumbnails-->
        <div class="modal-content">
          <center>
            <div class="mySlides"><img src="../static/img/img1.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img2.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img3.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img4.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img5.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img6.jpg" style="width:50%"></div>
            <div class="mySlides"><img src="../static/img/img7.jpg" style="width:50%"></div>
          </center>
        </div>

        <!-- Next/previous controls -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

        <!-- Thumbnail image controls -->
        <div id="column">
          <img class="demo" src="../static/img/img1.jpg" onclick="currentSlide(1)">
          <img class="demo" src="../static/img/img2.jpg" onclick="currentSlide(2)">
          <img class="demo" src="../static/img/img3.jpg" onclick="currentSlide(3)">
          <img class="demo" src="../static/img/img4.jpg" onclick="currentSlide(4)">
          <img class="demo" src="../static/img/img5.jpg" onclick="currentSlide(5)">
          <img class="demo" src="../static/img/img6.jpg" onclick="currentSlide(6)">
          <img class="demo" src="../static/img/img7.jpg" onclick="currentSlide(7)">
        </div>
    </div>

